{
  "name": "tmr-angularjstemplate",
  "displayName": "TMR for VSCode",
  "repository": {
    "url": "https://github.com/peterpoe/tmr-angularjstemplate"
  },
  "publisher": "temera",
  "author": {"name": "Gregorio Magini", "email": "gregorio.magini@temera.it"},
  "description": "Utilities for coding Temera TMRÂ® with VSCode",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.73.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "extensionDependencies": [
    "vscode.html-language-features"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:angularjstemplate",
    "onLanguage:javascript"
  ],
  "capabilities": {
    "definitionProvider": true
  },
  "contributes": {
    "html": {
      "customData": ["./language/angularjstemplate.html-data.json"]
    },
    "languages": [
      {
        "id": "angularjstemplate",
        "aliases": [
          "AngularJS Template",
          "angularjstemplate"
        ],
        "extensions": [
          ".html"
        ],
        "configuration": "./language/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "angularjstemplate",
        "scopeName": "text.html.angularjstemplate",
        "path": "./language/angularjstemplate.tmLanguage.json"
      }
    ],
    "htmlLanguageParticipants": [
      {
        "languageId": "angularjstemplate",
        "autoInsert": true
      }
    ],
    "snippets": [
      {
        "language": "angularjstemplate",
        "path": "./language/angularjstemplate.snippets.json"
      }
    ],
    "configurationDefaults": {
      "[angularjstemplate]": {
        "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?"
      },
      "[javascript]": {
        "editor.gotoLocation.multipleDefinitions": "goto"
      }
    }
  },
  "dependencies": {
    "camelcase": "^6.3.0"
  }
}
